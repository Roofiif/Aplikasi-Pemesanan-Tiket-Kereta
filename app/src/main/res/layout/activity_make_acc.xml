<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/khand_bold"
        android:letterSpacing="0.15"
        android:text="TRAINPEDIA"
        android:textColor="#008080"
        android:textSize="40dp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="285dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:background="@drawable/roundview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:fontFamily="@font/lato_bold"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/usernamefirst"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/roundtext"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="First" />

        <EditText
            android:id="@+id/usernamelast"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@id/usernamefirst"
            android:background="@drawable/roundtext"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Last" />

        <EditText
            android:id="@+id/usernameemail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:background="@drawable/roundtext"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Email" />

        <EditText
            android:id="@+id/usernameUser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameemail"
            android:layout_marginTop="34dp"
            android:background="@drawable/roundtext"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Username" />

        <EditText
            android:id="@+id/passwordUser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/usernameUser"
            android:layout_marginTop="32dp"
            android:background="@drawable/roundtext"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Password" />

        <Button
            android:id="@+id/loginuser"
            android:layout_width="76dp"
            android:layout_height="32dp"
            android:layout_below="@id/passwordUser"
            android:layout_marginTop="39dp"
            android:background="@drawable/roundtext"
            android:layout_centerHorizontal="true"
            android:text="Sign up"
            android:textSize="15sp" />


    </RelativeLayout>


</RelativeLayout>

